#![cfg_attr(rustfmt, rustfmt_skip)]
#![allow(clippy::all)]
#![allow(non_snake_case, dead_code, unused_variables, unused_imports)]

use mongodb::{{
    bson::{{Bson, Document}},
    sync::Client,
}};
use mongosql::{{
    build_catalog_from_catalog_schema,
    catalog::Catalog,
    options::{{ExcludeNamespacesOption, SqlOptions}},
    Translation,
}};
use std::{{collections::HashSet, fs, io::Read, path::PathBuf, string::ToString}};

use std::sync::Once;

use test_utils::*;

static INIT: Once = Once::new();

pub fn initialize_test() -> &'static SchemaDerivationYamlTestFile {{
    static mut TEST_FILE: Option<SchemaDerivationYamlTestFile> = None;

    INIT.call_once(|| {{
        unsafe {{
            TEST_FILE = Some(parse_schema_derivation_yaml_file(PathBuf::from({path})).unwrap());
        }}
    }});

    unsafe {{
        TEST_FILE.as_ref().unwrap()
    }}
}}
